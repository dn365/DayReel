                            <%= image_tag "videoThumb.png", alt: "" %>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-8 col-sm-12 col-xs-12 noPadding-desktop noPadding-small">
                        <ul class="homeList">
                            <li class="homeList-li">
                                <span class="homeList-round pull-left"></span>
                                <div class="pull-left homeList-text">
                                    <div class="homeList-bigText">Visit any online business or search DayReel. </div>
                                    <div class="homeList-smallText">Find your favorite business? Click your Reel (wheel logo) button.</div>
                                </div>
