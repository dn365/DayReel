    <div class="clearfix">
        <div class="container noPadding-middle ">

            <!--<div class="row">-->
            <div class="col-lg-12 col-md-8 col-md-push-4 col-lg-push-0 noPadding-desktop noPadding-middle noPadding-small leftPadding">
                <div class="menuBlocks clearfix">
                    <div class="col-custom col-md-4 col-sm-4 col-xs-4" >
                         <a href="#" class="topMenuLink">
                            Find Businesses
